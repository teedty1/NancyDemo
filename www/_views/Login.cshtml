@{
    Layout = "Layout.cshtml";
}
@model www.LoginStatus
@{
    string headerClass = "bg-success";
    string headerMessage = "Succeeded";
    if (Model.Authenticated == false)
    {
        headerClass = "bg-danger";
        headerMessage = "Failed";
    }
}
@section Header {
    <header class="@headerClass py-5 mb-5">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-lg-12">
                    <h1 class="display-4 text-white mt-5 mb-2">Authentication @headerMessage</h1>
                    @if (Model.Authenticated)
                    {
                        <p class="lead mb-5 text-white-50">You have been successfully authenticated</p>
                    }
                    else
                    {
                        <p class="lead mb-5 text-white-50">@Model.ErrorMessage</p>
                    }
                </div>
            </div>
        </div>
    </header>
}
<div class="container">
    <div class="row">
        @if (Model.Authenticated)
        {
            <div class="col-md-3">
                <h1>Json Web Token</h1>
                <a href="/auth/secure" class="btn btn-success">Access Secure Page</a>
            </div>
            <div class="col-md-9">
                <code>@Model.JWT</code>
            </div>
        }
        else
        {
            <div class="col-md-5">
                @Html.Partial("_views/LoginForm")
                <br />
            </div>
        }
    </div>
</div>
<br />
